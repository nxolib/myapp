%% -*- mode: erlang -*-

[
 {myapp, [{development_mode, ${DEVELOPMENT_MODE}}]}

, {nxo_template, [{path, [{priv_dir, myapp, "dtl"}]}]}

, {nxo_db,
   [{pools, [#{name => db,
               host => "db",
               user => "myapp_user",
               pass => fun myapp:db_pass/1,
               database => "myapp_db"}]},
    {retries, 3},
    {retry_sleep, 400},
    {default_return, auto},
    {ddl_source, [{priv_dir, myapp, "ddl"}]},
    {sql_source, [{priv_dir, myapp, "sql"}]}

   ]}

].
